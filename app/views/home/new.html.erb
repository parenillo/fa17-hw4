<h1>Add Todo</h1>

<%= form_tag('/todo') do %>

  <%= label_tag(:tasks, "Task") %>
  <%= text_field_tag(:tasks, nil, placeholder: @placeholder_task) %>
 

  <%= label_tag(:finished, "Completed?") %>
  <%= check_box_tag(:finished)%>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>


  <%= submit_tag("Create Todo") %>
<% end %>